<div class="item">
  <%= form_for @category do |f| %>
      <p>
        <%=  f.label :name %><br>
        <%=  f.text_field :name %>
      </p>
      <p>
        <%=  f.label :description %><br>
        <%=  f.text_area :description %>
      </p>
      <p class="button"><%= f.submit %></p>
  <% end %>
</div>